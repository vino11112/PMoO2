<Window x:Class="WpfApp1.BlockedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="BlockedWindow" Height="450" Width="800">
    <Border Background="#FFFF0000" CornerRadius="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="СИСТЕМА ЗАБЛОКИРОВАНА" FontSize="24" FontWeight="Bold"
                      Foreground="White" HorizontalAlignment="Center"/>

            <TextBlock x:Name="BlockTimeText" Text="До разблокировки: 01:00" 
                      FontSize="20" Foreground="White" Margin="0 20 0 0"
                      HorizontalAlignment="Center"/>

            
        </StackPanel>
    </Border>
</Window>
